<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <handlers>
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>
      <aspNetCore processPath="dotnet" arguments=".\MindPulse.API.dll" stdoutLogEnabled="false" stdoutLogFile=".\logs\stdout" hostingModel="inprocess" />
      
      <modules runAllManagedModulesForAllRequests="true" />
      
      <staticContent>
        <!-- Önce temizlik yapıyoruz ki çakışma olmasın -->
        <remove fileExtension=".blat" />
        <remove fileExtension=".dat" />
        <remove fileExtension=".dll" />
        <remove fileExtension=".json" />
        <remove fileExtension=".wasm" />
        <remove fileExtension=".woff" />
        <remove fileExtension=".woff2" />
        <!-- Sonra ekliyoruz -->
        <mimeMap fileExtension=".blat" mimeType="application/octet-stream" />
        <mimeMap fileExtension=".dat" mimeType="application/octet-stream" />
        <mimeMap fileExtension=".dll" mimeType="application/octet-stream" />
        <mimeMap fileExtension=".json" mimeType="application/json" />
        <mimeMap fileExtension=".wasm" mimeType="application/wasm" />
        <mimeMap fileExtension=".woff" mimeType="application/font-woff" />
        <mimeMap fileExtension=".woff2" mimeType="application/font-woff2" />
      </staticContent>

      <security>
        <requestFiltering>
          <!-- Dosya uzantısı engellerini kaldırıyoruz -->
          <fileExtensions>
            <remove fileExtension=".dat" />
            <remove fileExtension=".dll" />
            <remove fileExtension=".blat" />
            <add fileExtension=".dat" allowed="true" />
            <add fileExtension=".dll" allowed="true" />
            <add fileExtension=".blat" allowed="true" />
          </fileExtensions>
        </requestFiltering>
      </security>
      
    </system.webServer>
  </location>
</configuration>
